                app:layout_constraintTop_toBottomOf="@+id/fragment_formation_details_constraints_text" />

            <TextView
                android:id="@+id/fragment_formation_details_entretien_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entretien"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/fragment_formation_details_entretien_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{viewmodel.formation.entretien}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_formation_details_entretien_lbl" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
