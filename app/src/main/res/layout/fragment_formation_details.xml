                app:layout_constraintTop_toBottomOf="@+id/fragment_formation_details_debouches_text" />

            <TextView
                android:id="@+id/fragment_formation_details_infos_complementaires_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informations complementaires"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider9" />

            <TextView
                android:id="@+id/fragment_formation_details_infos_complementaires_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@{viewmodel.formation.informationsComplementaires}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_formation_details_infos_complementaires_lbl" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </me.zhanghai.android.fastscroll.FastScrollScrollView>
</layout>