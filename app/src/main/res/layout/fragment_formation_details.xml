                app:layout_constraintTop_toBottomOf="@+id/fragment_formation_details_matieres_dominantes_text" />

            <TextView
                android:id="@+id/fragment_formation_details_matieres_importantes_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matieres importantes de la terminale"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintStart_toStartOf="parent"
