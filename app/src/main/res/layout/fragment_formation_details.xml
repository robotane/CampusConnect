                android:layout_marginStart="@dimen/dimen_common_very_small"
                android:layout_marginTop="@dimen/dimen_common_small"
                android:layout_marginEnd="@dimen/dimen_common_very_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_formation_details_niveau_sortie_lbl" />

            <TextView
